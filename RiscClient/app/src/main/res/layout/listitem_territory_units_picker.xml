<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/normal_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_territory_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/select_territory_territory_name"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/text_color"/>

    <pl.polak.clicknumberpicker.ClickNumberPickerView
        android:id="@+id/np_units_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:value="1"
        app:min_value="1"
        app:max_value="50"
        app:decimal_number="0"
        app:picker_corner_radius="10"
        app:pickers_background_color="#3F51B5"
        app:swipe_enabled="false"
        app:value_background_color="#5C6BC0"
        app:value_text_color="@android:color/white"/>
</LinearLayout>